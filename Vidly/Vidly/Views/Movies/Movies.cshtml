@model Vidly.ViewModels.MovieViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.MovieList.Count == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <ul>
        @foreach (var movie in Model.MovieList)
        {
            <li>@movie.Name</li>
        }
    </ul>
}